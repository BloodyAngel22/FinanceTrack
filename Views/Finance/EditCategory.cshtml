@model Category
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	<form asp-action="EditCategory" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Name">Category</label>
			<select asp-for="Name" class="form-control" asp-items="@ViewBag.FinanceCategories">
					<option value="" disabled>Select category</option>
			</select>
		</div>
		<div class="form-group">
			<label for="NewName">New name</label>
			<input type="text" name="NewName" class="form-control">
		</div>
		<div>
			<br>
			<button type="submit" class="btn btn-primary">Edit category</button>
			<a asp-action="AddNote" class="btn btn-primary">Back</a>
		</div>
	</form>
</body>

</html>