@model FinanceFilter
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	<form asp-action="Filter" method="post">
		<div class="form-group">
			<label asp-for="CategoryName">Category</label>
			<select asp-for="CategoryName" class="form-control" asp-items="@ViewBag.FinanceCategories">
				<option value="" disabled>Select category</option>
			</select>
		</div>
		<div class="form-group">
			<label asp-for="DateFrom">Date from</label>
			<input type="date" asp-for="DateFrom" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="DateTo">Date to</label>
			<input type="date" asp-for="DateTo" class="form-control" />
		</div>
		<div>
			<br>
			<button type="submit" class="btn btn-primary">Filter</button>
			<a asp-action="AddNote" class="btn btn-primary">Back</a>
		</div>
	</form>
</body>

</html>