@model FinanceNoteModel
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0"> </head>

<body>
	<form asp-action="EditNote" method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<input asp-for="Id" class="form-control" type="hidden"/>
		</div>
		<div class="form-group">
			<label asp-for="ShopName">Shop Name</label>
			<input asp-for="ShopName" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="DateOfPurchase">Date Of Purchase</label>
			<input type="date" asp-for="DateOfPurchase" class="form-control" />
		</div>
		<div class="form-group">
			<label asp-for="CategoryName">Category</label>
			@if (ViewBag.FinanceCategories != null)
			{
				<select asp-for="CategoryName" class="form-control" asp-items="@ViewBag.FinanceCategories">
				</select>
			}
			else
			{
				<p>No categories found</p>
			}
		</div>
		<div class="form-group">
			<label asp-for="Price">Price</label>
			<input asp-for="Price" class="form-control" />
		</div>
		<div>
			<br>
			<button type="submit" class="btn btn-primary">Edit note</button>
			<a asp-action="Index" class="btn btn-primary">Back</a>
		</div>
	</form>
</body>

</html>